extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Ingreso al sistema Gps
          hr
          // login form
        form#login(method='POST' action='/api/login')
          div.form-group
            label(for='username') Correo electrónico:
            input#username.form-control(type='email', placeholder='username@email.com' name='username')
          div.form-group
            label(for='password') Contraseña:
            input#password.form-control(type='password' name='password')
          div.form-group
            button.btn.btn-primary(type='submit') Ingresar
        form#goRegister(method='GET' action='/register')
          button.btn.btn-secundary(type='submit') Registrarse 
          div.form-group
            br
            h6 #{message}
            